<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Déclaration de la permission pour l'accès à Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PorjetMobile2025"
        tools:targetApi="34">

        <activity
            android:name="com.example.porjetmobile2025.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.ForgotPasswordActivity" />
        <activity android:name=".View.ForgotPasswordTwoActivity" />
        <activity android:name=".View.ForgotPasswordfActivity" />

        <activity
            android:name="com.example.porjetmobile2025.View.AccueilActivity"
            android:exported="true" />
        <activity android:name="com.example.porjetmobile2025.View.AppointmentActivity"></activity>

        <activity android:name=".View.MyDoctorActivity" />
        <activity android:name=".View.MedicamentActivity"></activity>
        <activity android:name=".View.EditPorfileActivity"></activity>

        <activity android:name=".View.CalculatortwoActivity"></activity>
        <activity android:name=".View.CalculActivity"></activity>
        <activity android:name="com.example.porjetmobile2025.View.MyAppointmentsNotifActivity" />


        <activity
            android:name="com.example.porjetmobile2025.View.SignInActivity"
            android:exported="true">
            <!-- Vous pouvez ajouter un intent-filter ici si nécessaire -->
        </activity>


        <activity
            android:name="com.example.porjetmobile2025.View.SignUpActivity"
            android:exported="true">
        </activity>

        <!-- Activité d'inscription (SignUpActivity) -->
        <activity android:name="com.example.porjetmobile2025.View.AddPostActivity">
        </activity>

    </application>

</manifest>
